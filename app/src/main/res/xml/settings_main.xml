<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:defaultValue="@string/settings_char_type_default"
        android:entries="@array/settings_char_type_labels"
        android:entryValues="@array/settings_char_type_values"
        android:key="@string/settings_char_type_key"
        android:title="@string/settings_char_type_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_limit_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_limit_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_limit_label" />


</PreferenceScreen>